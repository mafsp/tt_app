<h1>ttアプリ</h1>
<br>
<br>

<%= form_with(model: @tt, local: true) do |form| %>

  <div class="tt_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>

<br>
<br>
<h1>TT一覧</h1>

<table>
  <tr>
    <th>内容</th>
  </tr>

<% @tts.each do |tt| %>
  <tr>
    <td><%= tt.content %></td>
  </tr>
<% end %>
</table>